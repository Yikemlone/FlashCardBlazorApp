@inherits LayoutComponentBase
@inject ISnackbar Snackbar

<MudThemeProvider Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>

    <MudAppBar Elevation="1" Color="Color.Tertiary">
        <MudText Typo="Typo.body2">SUGOI <b>JAPANESE</b></MudText>
        <MudSpacer />
        <LoginDisplay/>
    </MudAppBar>

    <MudMainContent>    
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

