            {
                // These ones I know I want
                Background = "#072c2a",
                Primary = "#ff4081ff",
                Secondary = "#4be2da",
                Surface = "#0b423f",
                Tertiary = "#0b423f",
                Dark = Colors.Grey.Darken1,
                AppbarText = "#ffffff",
                TextPrimary = "#ffffff",
                TextSecondary = "#ffffff",
                TableLines = Colors.Grey.Darken1,
                ActionDefault = Colors.Shades.White,
                ActionDisabled = Colors.Grey.Darken1,
                ActionDisabledBackground = Colors.Grey.Darken2,
                LinesDefault = Colors.Grey.Darken3,
            }
        };


}