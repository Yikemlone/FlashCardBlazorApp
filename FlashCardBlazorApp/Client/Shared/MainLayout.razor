@inherits LayoutComponentBase
@inject ISnackbar Snackbar

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>

    <MudAppBar Elevation="1" Color="Color.Secondary">
        <MudSpacer />
        <NavMenu></NavMenu>
    </MudAppBar>

    <MudDrawer Open="true" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Flash Card App</MudText>
        </MudDrawerHeader>

        <NavLink class="nav-link" href="admin">
            <MudNavLink Style="color: #ff4081ff" Href="/" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        </NavLink>

        <AuthorizeView>
            <Authorized>
                <NavLink class="nav-link" href="admin">
                    <MudNavLink Style="color: #ff4081ff" Href="admin" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Dashboard">Admin Dashboard</MudNavLink>
                </NavLink>
            </Authorized>
        </AuthorizeView>

    </MudDrawer>

    <MudMainContent>    
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    private MudTheme _theme = new();
    private bool _isDarkMode = true;
}