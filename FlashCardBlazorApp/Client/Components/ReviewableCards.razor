@inherits ComponentBase

<MudCard Style="width: 100%; padding: 0;">   
    <MudCardContent>
        <MudText Typo="Typo.body2">@Title</MudText>
        <MudText Typo="Typo.h3" Color="@Color" >@Number</MudText>
    </MudCardContent>

    <MudCardActions Class="pa-3">
        <MudButton Href="@Link" Variant="Variant.Outlined" Color="Color.Secondary">Review</MudButton>
    </MudCardActions>
</MudCard>


@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public int Number { get; set; }
    [Parameter] public Color Color { get; set; }
    [Parameter] public string Link { get; set; }
}
